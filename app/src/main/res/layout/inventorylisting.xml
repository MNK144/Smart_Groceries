<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:weightSum="30"
    android:padding="8dp">

    <ImageView
        android:id="@+id/productimage"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/groceries"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="18"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/productname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:fontFamily="@font/roboto_med"
            android:textSize="18sp"
            android:textColor="@color/fontPrimary"
            android:maxLines="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/productmeasure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500 gram"
                android:fontFamily="@font/roboto_light"
                android:textSize="15sp"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/productdiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="|"
                android:fontFamily="@font/roboto_light"
                android:textSize="17sp"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/productprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40â‚¹"
                android:fontFamily="@font/roboto_light"
                android:textSize="15sp"
                android:maxLines="1"/>
        </LinearLayout>
        <TextView
            android:id="@+id/productQty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stock: 100"
            android:fontFamily="@font/roboto_light"
            android:textSize="15sp"
            android:maxLines="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/inventoryButton"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:weightSum="10"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@null"
        android:orientation="horizontal"
        android:layout_weight="7">
        <ImageButton
            android:id="@+id/inventoryEdit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:background="@drawable/button1"
            android:src="@drawable/itemedit"
            android:textSize="21dp"
            android:visibility="visible"
            android:tint="@color/white" />
        <ImageButton
            android:id="@+id/inventoryRemove"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:layout_marginStart="4dp"
            android:background="@drawable/button3"
            android:src="@drawable/itemdelete"
            android:text="+"
            android:textSize="15dp"
            android:visibility="visible"
            android:tint="@color/white"/>
    </LinearLayout>


</LinearLayout>