<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.my.smartgroceries.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sregistert1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up For Shop"
            android:textColor="@color/fontPrimary"
            android:textSize="36dp"
            android:fontFamily="@font/roboto_med"
            android:layout_marginTop="28dp"
            android:layout_marginStart="12dp"/>
        <TextView
            android:id="@+id/sregistert2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fontPrimary"
            android:fontFamily="@font/roboto_light"
            android:layout_below="@id/sregistert1"
            android:layout_alignStart="@id/sregistert1"
            android:layout_marginTop="7dp"
            android:layout_marginStart="2dp"
            android:textSize="19dp"
            android:text="Create a new vendor account"/>

        <LinearLayout
            android:id="@+id/srinputl_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/sregistert2"
            android:background="@drawable/inputbox1"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:weightSum="100">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="26"
                android:fontFamily="@font/roboto_med"
                android:textColor="@color/fontSecondary"
                android:textSize="16dp"
                android:text="Name:"/>
            <EditText
                android:id="@+id/sregname"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="74"
                android:inputType="textPersonName"
                android:hint="Enter name here"
                android:textColor="@color/fontPrimary"
                android:fontFamily="@font/roboto_med"
                android:background="@null"
                android:maxLength="32"
                android:textSize="16dp"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/srinputl_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/srinputl_name"
            android:background="@drawable/inputbox1"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:weightSum="100">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="26"
                android:fontFamily="@font/roboto_med"
                android:textColor="@color/fontSecondary"
                android:textSize="16dp"
                android:text="Contact:"/>
            <EditText
                android:id="@+id/sregphone"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="74"
                android:inputType="phone"
                android:hint="Enter contact here"
                android:textColor="@color/fontPrimary"
                android:fontFamily="@font/roboto_med"
                android:background="@null"
                android:maxLength="12"
                android:textSize="16dp"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/srinputl_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/srinputl_phone"
            android:background="@drawable/inputbox1"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:weightSum="100">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="26"
                android:fontFamily="@font/roboto_med"
                android:textColor="@color/fontSecondary"
                android:textSize="16dp"
                android:text="Email:"/>
            <EditText
                android:id="@+id/sregemail"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="74"
                android:inputType="textEmailAddress"
                android:hint="Enter email here"
                android:textColor="@color/fontPrimary"
                android:fontFamily="@font/roboto_med"
                android:background="@null"
                android:maxLength="42"
                android:textSize="16dp"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/srinputl_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/srinputl_email"
            android:background="@drawable/inputbox1"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="12dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:weightSum="100">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="26"
                android:fontFamily="@font/roboto_med"
                android:textColor="@color/fontSecondary"
                android:textSize="16dp"
                android:text="Password:"/>
            <EditText
                android:id="@+id/sregpass"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="66"
                android:inputType="textPassword"
                android:hint="Enter password here"
                android:textColor="@color/fontPrimary"
                android:fontFamily="@font/roboto_med"
                android:background="@null"
                android:maxLength="32"
                android:textSize="16dp"
                android:layout_marginStart="10dp"/>
            <ImageButton
                android:id="@+id/regpassshow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:src="@drawable/password_visible"
                android:layout_marginStart="2dp"
                android:tint="@color/fontSecondary"
                android:background="@null"/>
        </LinearLayout>

        <TextView
            android:id="@+id/sregistert3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fontSecondary"
            android:fontFamily="@font/roboto_light"
            android:layout_below="@id/srinputl_password"
            android:layout_alignStart="@id/srinputl_password"
            android:layout_marginTop="24dp"
            android:layout_marginStart="2dp"
            android:textSize="19dp"
            android:text="Enter details about your shop:"/>

        <LinearLayout
            android:id="@+id/srinputl_storename"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/sregistert3"
            android:background="@drawable/inputbox1"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:weightSum="100">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="26"
                android:fontFamily="@font/roboto_med"
                android:textColor="@color/fontSecondary"
                android:textSize="16dp"
                android:text="Name:"/>
            <EditText
                android:id="@+id/sregstorename"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="74"
                android:inputType="textPersonName"
                android:hint="Enter shop name here"
                android:textColor="@color/fontPrimary"
                android:fontFamily="@font/roboto_med"
                android:background="@null"
                android:maxLength="42"
                android:textSize="16dp"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/srinputl_storeaddr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/srinputl_storename"
            android:background="@drawable/inputbox1"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:weightSum="100">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="26"
                android:fontFamily="@font/roboto_med"
                android:textColor="@color/fontSecondary"
                android:layout_gravity="top"
                android:layout_marginTop="16sp"
                android:textSize="16dp"
                android:text="Address:"/>
            <EditText
                android:id="@+id/sregstoreaddr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="74"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:maxLines="3"
                android:hint="Enter shop address here"
                android:textColor="@color/fontPrimary"
                android:fontFamily="@font/roboto_med"
                android:background="@null"
                android:maxLength="100"
                android:textSize="16dp"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/srinputl_storepincode"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/srinputl_storeaddr"
            android:background="@drawable/inputbox1"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:weightSum="100">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="26"
                android:fontFamily="@font/roboto_med"
                android:textColor="@color/fontSecondary"
                android:textSize="16dp"
                android:text="Pincode:"/>
            <EditText
                android:id="@+id/sregstorepincode"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="74"
                android:inputType="number"
                android:hint="Enter Pincode here"
                android:textColor="@color/fontPrimary"
                android:fontFamily="@font/roboto_med"
                android:background="@null"
                android:maxLength="6"
                android:textSize="16dp"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/sregbtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/srinputl_storepincode"
            android:layout_marginTop="18dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/button1"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto_med"
            android:textSize="17sp"
            android:text="Register"/>


    </RelativeLayout>
</ScrollView>